doctype html
html
  head
    meta(charset='utf-8')
    meta(content='IE=edge' http-equiv='X-UA-Compatible')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    //- meta(http-equiv='Content-Security-Policy' content="default-src 'self'; script-src 'self' https://cdn.polyfill.io/")

    block headFonts

    block headMeta
      if title
        title= title
      if description
        meta(name='description' content=description)

    block headStylesOverride
      link(rel='stylesheet' href='/assets/global.css')
      block headStyles

    block headScriptsOverride
      //- script(defer src='https://cdn.polyfill.io/v2/polyfill.min.js')
      script(defer src='/assets/global.js')
      block headScripts

  body
    block bodyOverride
      block body

    block footScriptsOverrride
      block footScripts
