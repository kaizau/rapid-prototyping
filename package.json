{
  "name": "",
  "version": "",
  "author": "",
  "repository": "",
  "description": "",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=development USE_DOTENV=1 gulp watch & npm run api",
    "start-prod": "USE_DOTENV=1 gulp watch & npm run api",
    "api": "node -r dotenv/config node_modules/.bin/now-lambda --port 8889",
    "lint": "prettier --write '*.{json,md,yml,yaml,graphql}' & eslint --fix .",
    "preview": "now dev -p 8888",
    "deploy": "now --target production",
    "now-build": "gulp now"
  },
  "prettier": {
    "bracketSpacing": false,
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "no-console": "warn",
      "no-duplicate-imports": "error",
      "no-var": "error",
      "no-unused-vars": "warn",
      "prefer-const": "error"
    }
  },
  "eslintIgnore": [
    "dist/"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "autoprefixer": "^9.5.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "css-loader": "^2.1.1",
    "cssnano": "^4.1.10",
    "dotenv": "^8.0.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "file-loader": "^3.0.1",
    "fs-extra": "^7.0.1",
    "gulp": "^4.0.2",
    "gulp-add-src": "^1.0.0",
    "gulp-connect": "^5.7.0",
    "gulp-pug": "^4.0.1",
    "gulp-replace": "^1.0.0",
    "http-proxy-middleware": "^0.19.1",
    "husky": "^2.2.0",
    "mini-css-extract-plugin": "^0.6.0",
    "node-notifier": "^5.4.0",
    "now-lambda-runner": "^3.3.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.17.0",
    "style-loader": "^0.23.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "webpack": "^4.30.0",
    "webpack-manifest-plugin": "^2.0.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "helmet": "^3.18.0",
    "mithril": "^1.1.6",
    "normalize.css": "^8.0.1",
    "purecss": "^1.0.0"
  }
}
